<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_banner_backgroud"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_backgroud_banner" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_banner_backgroud">

        <ImageView
            android:id="@+id/imageView_banner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textview_title_banner_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_banner"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageView_banner"
            android:text="asd daghf dasdf dfa"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_title_banner_song"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imageView_banner">

            <TextView
                android:id="@+id/textView_content"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="dkjhasf dklfjfkldas gjksgas kldsajfkl dkldfjaskl sa daskflj asjklds dsklfjdskl"
                android:textSize="13dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>